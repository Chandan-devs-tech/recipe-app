<div id="<%= dom_id recipe %>" class="card mb-3">
  <div class="card-body d-flex gap-5">
    <div class="row w-100">
      <div class="col-4 d-flex flex-column justify-content-between align-items-center">
        <a href="<%= recipe_path recipe.id %>" class="text-decoration-none">
          <h3><%= recipe.name %></h3>
        </a>
        <%= link_to "REMOVE", "/recipes/#{recipe.id}", class: "link", data: { turbo_method: :delete } if can? :manage, recipe %>
      </div>
      <div class="col-8">
        <p><%= recipe.description %></p>
      </div>
    </div>
  </div>
</div>
